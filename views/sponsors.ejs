<h1 class="title">Our Sponsors</h1>
<%if (user){ %>
  <div class="center">
  <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#addSponsorModal">Add Sponsor</button>

  </div>
<%}%>
<hr class="hr-white"/>
<div class="sponsor-list">

<div class="sponsor-sec-flex">


<section class="diamond">
<h1>Diamond</h1>
<hr class="hr-white"/>
<% for(var i = 0; i < sponsors.length; i++){%>
  <%if(sponsors[i].donation >= 2500){%>
    <div class="card card-sponsor-diamond">
        <a href="<%=sponsors[i].url%>"><img class="card-img-top img-responsives bio-pic" src="<%=sponsors[i].img_url%>"/></a>
    </div>
  <%}%>
<%}%>
</section>
<h1>Gold</h1>
<hr class="hr-white"/>
<section class="sponsor-sec gold">

<hr />
<% for(var i = 0; i < sponsors.length; i++){%>
  <%if(sponsors[i].donation >= 1000 && sponsors[i].donation <2500){%>
    <div class="card card-sponsor-lg">
    <img class="card-img-top img-responsi2ves bio-pic" src="<%=sponsors[i].img_url%>"/>
    </div>

  <%}%>
<%}%>
</section>
<h1>Silver</h1>
<hr class="hr-white"/>
<section class="sponsor-sec silver">


<% for(var i = 0; i < sponsors.length; i++){%>
  <%if(sponsors[i].donation >= 500 && sponsors[i].donation <1000){%>
    <div class="card card-sponsor-lg">
      <img class="card-img-top img-responsives bio-pic" src="<%=sponsors[i].img_url%>"/>
    </div>

  <%}%>
<%}%>
</section>
<h1>Bronze</h1>
<hr class="hr-white"/>

<section class="sponsor-sec bronze">

<% for(var i = 0; i < sponsors.length; i++){%>
  <%if(sponsors[i].donation >= 250 && sponsors[i].donation <500){%>
    <div class="card card-sponsor-md">
      <img class="card-img-top img-responsives bio-pic" src="<%=sponsors[i].img_url%>"/>
    </div>
  <%}%>
<%}%>
</section>
<h1>Supporter</h1>
<hr class="hr-white"/>
<section class="sponsor-sec supporter">


<% for(var i = 0; i < sponsors.length; i++){%>
  <%if(sponsors[i].donation >= 100 && sponsors[i].donation <250){%>
    <div class="card card-sponsor-sm">
      <img class="card-img-top img-responsives bio-pic" src="<%=sponsors[i].img_url%>"/>
    </div>
  <%}%>
<%}%>
</section>
<h1>Contributor</h1>
<hr class="hr-white"/>
<section class="sponsor-sec contributor">


<% for(var i = 0; i < sponsors.length; i++){%>

  <%if(sponsors[i].donation >= 1 && sponsors[i].donation <100){%>
    <div class="card card-sponsor-sm">
      <h4><%=sponsors[i].name%></h4>
    </div>
  <%}%>
<%}%>
</section>


</div>


  <!-- Sponsors like this -->



</div>


